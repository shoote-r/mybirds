{% extends 'base.html.twig' %}

{% block title %}Birds{% endblock %}

{% block body %}
    <h1>Birds</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bird.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ bird.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bird.description }}</td>
            </tr>
            {% if bird.imageFilename %}
                <tr>
                    <th>Image</th>
                    <td>
                        <img src="{{ asset('uploads/birds/' ~ bird.imageFilename) }}"
                             alt="Image de l'oiseau {{ bird.name }}"
                             style="max-width: 300px; height: auto;">
                    </td>
                </tr>
            {% else %}
                <tr>
                    <th>Image</th>
                    <td>Aucune image disponible</td>
                </tr>
            {% endif %}
            
        </tbody>
    </table>

    <a href="{{ path('app_birds_edit', {'id': bird.id}) }}">edit</a>

    {{ include('birds/_delete_form.html.twig') }}
{% endblock %}

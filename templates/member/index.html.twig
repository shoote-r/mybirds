{% extends 'base.html.twig' %}

{% block title %}Members{% endblock %}

{% block body %}
<h1>Members</h1>

<ul>
    {% for member in members %}
        <li>
            <a href="{{ path('app_member_show', {'id': member.id}) }}">
                {{ member.email }}
            </a>
             <ul>
                {% for aviary in member.aviaries %}
                    <li>
                        <a href="{{ path('app_aviary_show', {'id': aviary.id}) }}">
                            {{ aviary.description ?? 'No description' }}
                        </a>
                    </li>
                {% else %}
                    <li>No aviaries for this member.</li>
                {% endfor %}
            </ul>
            
        </li>
    {% else %}
        <li>No members found.</li>
    {% endfor %}
</ul>

{% endblock %}
